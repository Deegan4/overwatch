{
  "name": "overwatch",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "author": "OVERWATCH",
  "description": "Operational Vigilance & Electronic Reconnaissance â€” Real-time geospatial intelligence & cyber threat monitoring dashboard",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"next dev -p 3457\" \"wait-on http://localhost:3457 && electron .\"",
    "electron:build": "next build && electron-builder --mac",
    "electron:build:dmg": "next build && electron-builder --mac dmg",
    "electron:build:zip": "next build && electron-builder --mac zip"
  },
  "build": {
    "appId": "com.overwatch.app",
    "productName": "OVERWATCH",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "public/**/*",
      "src/**/*",
      "package.json",
      "next.config.ts"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "darkModeSupport": true
    },
    "dmg": {
      "title": "OVERWATCH",
      "backgroundColor": "#0a0e17",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "@turf/turf": "^7.3.3",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.563.0",
    "mapbox-gl": "^3.18.1",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/mapbox-gl": "^3.4.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
